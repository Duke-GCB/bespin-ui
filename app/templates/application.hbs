<div class="container">
  {{#bs-navbar as |navbar|}}
    <div class="navbar-header">
      {{#navbar.toggle}}
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      {{/navbar.toggle}}
      {{#link-to 'index' class="navbar-brand"}}Bespin{{/link-to}}
    </div>
    {{#navbar.content}}
      {{#navbar.nav as |nav|}}
        {{#nav.item}}{{#link-to 'workflows'}}Workflows{{/link-to}}{{/nav.item}}
        {{#nav.item}}
          {{#if session.isAuthenticated}}
              <a {{action 'invalidateSession'}}>Logout</a>
          {{else}}
            {{#link-to 'login'}}Login{{/link-to}}
          {{/if}}
        {{/nav.item}}
      {{/navbar.nav}}
    {{/navbar.content}}
  {{/bs-navbar}}
  <div class="body">
    {{outlet}}
  </div>
</div>