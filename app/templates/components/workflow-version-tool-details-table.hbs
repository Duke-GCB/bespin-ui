<table class="table table-condensed">
  <thead>
  <tr>
    <th>Workflow Tool</th>
    <th>Packages</th>
    <th>Docker Image</th>
  </tr>
  </thead>
  <tbody>
  {{#each rows as |row|}}
    <tr>
      <td>{{row.tool_name}}</td>
      <td>
        <ul class="list-unstyled">
        {{#each row.packages as |package|}}
          <li><a href="{{package.citation}}">{{package.package}} {{package.versions}}</a></li>
        {{/each}}
        </ul>
      </td>
      <td>
        <ul class="list-unstyled">
        {{#each row.docker_images as |dockerImage|}}
          <li>
            {{#if (docker-link dockerImage) as |dockerLink|}}
              <a href="{{dockerLink}}">{{dockerImage}}</a>
            {{else}}
              {{dockerImage}}
            {{/if}}
          </li>
        {{/each}}
        </ul>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>
{{yield}}
