<div class="col-md-12">
{{#bs-form as |form|}}
  {{#form.group class='string-field-group'}}
    <label for="{{concat elementId '-stringField'}}">{{ fieldLabel }}</label>
    {{input class='form-control string-field-input' id=(concat elementId '-stringField') value=answerValue}}
    {{/form.group}}
  {{/bs-form}}
  {{#if answerFormErrors.show}}
    {{error-panel errors=fieldErrors}}
  {{/if}}
</div>
