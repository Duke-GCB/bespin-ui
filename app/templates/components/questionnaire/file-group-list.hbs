<div class="col-md-6 file-group-list-picker">
  <label>Pick your {{ settings.groupName }} {{ groupSizeName }} from Duke Data Service</label>
  {{dds/dds-project-files-picker projects selectedDdsFiles (action 'addFile') fileNameRegexStr=settings.fileNameRegexStr}}
</div>
<div class="col-md-6 file-group-list-selections">
  <label>Selected {{ settings.groupName }} {{ groupSizeName }}</label>
  {{#each groups as |group groupIndex|}}
    {{questionnaire/file-group-row group groupIndex (action 'removeAt') groupName=settings.groupName}}
  {{else}}
    {{questionnaire/empty-selection}}
  {{/each}}
</div>
{{yield}}