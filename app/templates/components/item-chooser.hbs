{{#bs-form as |form|}}
  <h3>{{title}}</h3>
  {{#form.group class='job-kind'}}
    <label class="control-label">{{label}}:</label>
    {{#item-chooser.item-picker-list items (action "selectionChanged") }}
    {{/item-chooser.item-picker-list}}
  {{/form.group}}
  {{#bs-button type="default" onClick=(action 'cancel')class="back-button"}}Cancel{{/bs-button}}
  {{#bs-button type="primary" onClick=(action 'next') class="pull-right next-button"}}Next{{/bs-button}}
{{/bs-form}}