<div class="row">
  <div class="col-md-12">
    <h4>Job Details</h4>
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title">{{job.name}}</div>
      </div>
      <div class="panel-body">
        <dl class="dl-horizontal">
          <dt>Workflow</dt>
          <dd>{{job.workflowVersion.workflow.name}} (v{{job.workflowVersion.version}})</dd>
          <dt>Created</dt>
          <dd>{{job.created}}</dd>
          <dt>Last Updated</dt>
          <dd>{{job.lastUpdated}}</dd>
          <dt>State</dt>
          <dd>{{job.state}}</dd>
          {{#if jobErrors}}
            <dt>Errors</dt>
            {{#each jobErrors as |jobError|}}
              <dd><pre>{{jobError.content}}</pre></dd>
            {{/each}}
          {{/if}}
          <dt>Step</dt>
          <dd>{{job.step}}</dd>
          <dt>VM Flavor</dt>
          <dd>{{job.vmFlavor}}</dd>
          <dt>VM Instance Name</dt>
          <dd>{{job.vmInstanceName}}</dd>
          <dt>Job Order JSON</dt>
          <dd><pre>{{prettyJobOrder}}</pre></dd>
        </dl>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    {{job-controls job}}
  </div>
</div>
{{yield}}
