<td class="job-detail-cell-selected">{{job.selected}}</td>
<td class="job-detail-cell-id">{{#link-to "jobs.show" job class="job-show-link"}}{{job.id}}{{/link-to}}</td>
<td class="job-detail-cell-name">{{job.name}}</td>
<td class="job-detail-cell-workflow-name">
  {{job.workflowVersion.workflow.name}} - {{#workflow-version-link job.workflowVersion}}{{job.workflowVersion.version}}{{/workflow-version-link}}
</td>
<td class="job-detail-cell-status">{{decode-job-state job.state}}</td>
<td class="job-detail-cell-updated">{{moment-from job.lastUpdated}}</td>
<td class="job-detail-cell-elapsed-time">{{format-hours elapsedTime suffix=" hours"}}</td>
<td class="job-detail-cell-readme">{{#if job.isFinished}}{{#link-to "jobs.readme" job}}README{{/link-to}}{{/if}}</td>
<td class="job-detail-cell-delete">{{#if job.isDeletable}}
  {{modal-confirmation
    title=modalConfirmationTitle
    body=modalConfirmationBody
    openButtonTitle='Delete'
    confirmButtonTitle='Delete'
    onConfirm=(action 'delete')}}
{{/if}}
</td>
{{yield}}
