<div class="col-md-4">
  <article class="workflow-picker-detail-row panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">
          <label for="{{concat elementId '-radio' }}" class="workflow-name">{{workflow.name}}</label>
      </div>
    </div>
    <div class="panel-body">
      <div class="radio">
        <label class="workflow-content">
          {{picker-radio-button id=(concat elementId '-radio') value=workflow name='selectedWorkflow' onChange=(action "pick")}}
          {{yield}}
        </label>
      </div>
    </div>
  </article>
</div>